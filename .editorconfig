root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[{*.lua,*.lua.in,sile.in,*rockspec,.busted,.luacheckrc}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.pl]
indent_style = space
indent_size = 4

[*.m4]
indent_style = space
indent_size = 8

[{Makefile*,*.mk,*.mk.in]
indent_style = tab
indent_size = 4
