root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[{*.lua,*.lua.in,sile.in,*rockspec,.busted,.luacheckrc}]
indent_style = space
indent_size = 2
max_line_length = 120
collapse_simple_statement = never

[*.pl]
indent_style = space
indent_size = 4

[makefile*]
indent_style = tab
indent_size = 4
